Config { font = "xft:Nokia Pure Text:size=8"
       , bgColor = "black"
       , fgColor = "gray"
       , position = TopSize L 90 18
       , lowerOnStart = True
       , commands = [ Run Cpu ["-L","3","-H","80","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Network "eth0" ["-t","<dev>: <rx> down, <tx> up","-L","5","-H","1000","-n","green","-h","red"] 10
                    , Run Network "wlan0" ["-t","<dev>: <rx> down, <tx> up","-L","5","-H","500","-n","green","-h","red"] 10
                    , Run Network "tun0" ["-t","<dev>: <rx> down, <tx> up","-L","5","-H","1000","-n","green","-h","red"] 10
                    , Run Date "%a %b %_d %l:%M" "date" 10
                    , Run BatteryP ["BAT0"]
                               ["-t", "<acstatus><watts> (<left>%)",
                              "-L", "10", "-H", "80", "-p", "3",
                              "--", "-O", "<fc=green>On</fc> - ", "-o", "",
                              "-L", "-15", "-H", "-5",
                              "-l", "red", "-m", "blue", "-h", "green"]
                             100
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %cpu% | %memory% | %eth0% | %wlan0% | %tun0% | %battery% | <fc=#ee9a00>%date%</fc>"
       }
