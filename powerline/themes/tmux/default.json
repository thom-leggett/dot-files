{
	"default_module": "powerline.segments.common",
	"segment_data": {
		"virtualenv": {
			"before": "ⓔ "
		},
		"uptime": {
			"before": "⇑ "
		},
		"external_ip": {
			"before": "ⓦ "
		},
		"email_imap_alert": {
			"before": "✉ ",
			"args": {
				"username": "",
				"password": ""
			}
		},
                "branch": {
                    "before": "⎇ "
                }
	},
	"segments": {
                "left":  [
                        {
                                "name": "hostname"
                        },
                        {
                                "name": "user"
                        },
                        {
                                "name": "cwd",
                                "priority": 0,
                                "args": {
                                    "dir_limit_depth": 3
                                }

                        },
                        {
                            "name": "branch",
                            "args": {
                                "status_colors": true
                            }
                        },
                        {
                                "name": "virtualenv"
                        }
                ],
		"right": [
                        {
                                "name": "network_load",
                                "priority": 50,
                                "args": {
                                    "recv_format": "⬇{value:>8}",
                                    "sent_format": "⬆{value:>8}",
                                    "suffix": "B/s  "
                                }
                        },
			{
				"name": "system_load",
				"priority": 50
			},
                        {
                                "name": "battery",
                                "args": {
                                    "steps": 100
                                }
                        },
			{
				"name": "date"
			},
			{
				"name": "date",
				"args": {
					"format": "%H:%M",
					"istime": true
				}
			}
		]
	}
}
